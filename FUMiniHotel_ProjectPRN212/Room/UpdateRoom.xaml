<Window x:Class="FUMiniHotel_ProjectPRN212.Room.UpdateRoom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FUMiniHotel_ProjectPRN212.Room"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        mc:Ignorable="d"
        Title="Chỉnh sửa thông tin phòng" Height="500" Width="600"
        WindowStartupLocation="CenterScreen">
    <Border CornerRadius="10" BorderThickness="1">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="{StaticResource winBorderColor1}" Offset="0"/>
                <GradientStop Color="{StaticResource winBorderColor2}" Offset="0.5"/>
                <GradientStop Color="{StaticResource winBorderColor3}" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>
        <Border.Background>
            <LinearGradientBrush StartPoint="1,1" EndPoint="0,0">
                <GradientStop Color="{StaticResource primaryBackColor1}" Offset="0"/>
                <GradientStop Color="{StaticResource primaryBackColor1}" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <Grid Margin="20">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">
                <TextBlock Text="Chỉnh sửa thông tin phòng"
                           Foreground="{StaticResource titleColor2}"
                           FontSize="24"
                           FontFamily="Montserrat"
                           FontWeight="Bold"
                           Margin="0,0,0,20"
                           TextAlignment="Center"/>

                <!-- Mã phòng (readonly) -->
                <TextBlock Text="Mã phòng" Foreground="White" FontWeight="Bold"/>
                <TextBox x:Name="txtRoomId" IsReadOnly="True" Background="LightGray" Margin="0,0,0,10"/>

                <!-- Các trường nhập liệu -->
                <TextBlock Text="Số phòng" Foreground="White" FontWeight="Bold"/>
                <TextBox x:Name="txtRoomNumber" Margin="0,0,0,10"/>

                <TextBlock Text="Loại phòng" Foreground="Black" FontWeight="Bold"/>
                <ComboBox x:Name="cbRoomType" DisplayMemberPath="TypeName" SelectedValuePath="RoomTypeId" Margin="0,0,0,10"/>

                <TextBlock Text="Mô tả" Foreground="White" FontWeight="Bold"/>
                <TextBox x:Name="txtDescription" Margin="0,0,0,10"/>

                <TextBlock Text="Sức chứa" Foreground="White" FontWeight="Bold"/>
                <TextBox x:Name="txtMaxCapacity" Margin="0,0,0,10"/>

                <TextBlock Text="Giá/ngày" Foreground="White" FontWeight="Bold"/>
                <TextBox x:Name="txtPricePerDay" Margin="0,0,0,10"/>

                <TextBlock Text="Trạng thái" Foreground="White" FontWeight="Bold"/>
                <ComboBox x:Name="cbStatus" Margin="0,0,0,20">
                    <ComboBoxItem Content="Còn phòng"/>
                    <ComboBoxItem Content="Hết phòng"/>
                </ComboBox>

                <!-- Nút lưu -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                    <Button Content="Cập nhật"
                        Background="{StaticResource color1}"
                        Foreground="White"
                        FontSize="16"
                        FontFamily="Montserrat"
                        FontWeight="Bold"
                        Padding="10,5"
                        Click="Update_Click"/>
                    <Button Content="Hủy"
                        Background="{StaticResource color4}"
                        Foreground="White"
                        FontSize="16"
                        FontFamily="Montserrat"
                        FontWeight="Bold"
                        Padding="10,5"
                        Margin="10,0,0,0"
                        Click="Cancel_Click"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</Window>